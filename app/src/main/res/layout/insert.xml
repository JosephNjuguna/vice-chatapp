<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:background="@drawable/searchdeco"
            android:visibility="visible"
            android:padding="4dp"
            android:layout_alignBottom="@+id/Profile"
            android:layout_toEndOf="@+id/Profile"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"/>
    <ImageView
        android:id="@+id/imageView27text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/chat"
        android:layout_alignTop="@+id/post_username"
        android:layout_toStartOf="@+id/imageView25dots"/>
    <ImageView
        android:id="@+id/imageView25dots"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_dots"
        android:layout_alignTop="@+id/imageView27text"
        android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Profile"
            android:adjustViewBounds="true"/>
            <TextView
                android:padding="4dp"
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp"
                android:layout_below="@+id/imageButton2"
                android:textColor="#303F9F"
                android:background="@drawable/searchdeco"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/Like"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewName"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/like_grey"/>
            <ImageView
                android:id="@+id/heartLike"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/textViewName"
                android:layout_margin="5dp"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/textViewlikecount"
                android:background="#ffff"
                android:src="@mipmap/heart_grey"/>
            <ImageView
                android:id="@+id/comments"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/textViewheartcount"
                android:background="#ffff"
                android:layout_below="@+id/textViewName"
                android:src="@mipmap/grey_comment"/>
            <TextView
                android:id="@+id/textViewlikecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Like"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/Like"
                android:hint="0"
                android:textColor="#1620b3"/>
            <TextView
                android:id="@+id/textViewheartcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/heartLike"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/heartLike"
                android:hint="0"
                android:textColor="#303f9f"/>
            <TextView
                android:id="@+id/textViewCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/comments"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/comments"
                android:textColor="#303f9f"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/textViewName"
            android:layout_margin="5dp"
            android:layout_marginStart="52dp"
            android:layout_toEndOf="@+id/textViewCommentCount"
            android:background="#ffff"
            android:src="@mipmap/share"/>
        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView27text"
            android:layout_toEndOf="@+id/Profile"
            android:textColor="#1620b3" />

        <Button
            android:layout_below="@+id/textViewName"
            android:id="@+id/wallcomment"
            android:background="@drawable/searchdeco"
            android:layout_margin="5dp"
            android:textColor="#303F9f"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:text="Comment" />
    </RelativeLayout>
</android.support.v7.widget.CardView>