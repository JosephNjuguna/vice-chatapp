<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_neonclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.oskip.bitapp.Neonclick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="#000"
        android:id="@+id/neontext"
        android:layout_margin="4dp"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:background="@drawable/notificationlayout"
        android:layout_height="wrap_content"
        android:hint="neon story......" />

        <Button
            android:textColor="#050505"
            android:background="@drawable/text"
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:text="  About the Author  "
            android:layout_below="@+id/imageView24"
            android:layout_centerHorizontal="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView24"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/circle_spin"
            android:layout_below="@+id/comments"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"/>

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/like_grey"
            android:layout_below="@+id/neontext"
            android:layout_toStartOf="@+id/textView65"/>

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:src="@mipmap/share"
            android:layout_alignTop="@+id/imageView33"
            android:layout_toEndOf="@+id/imageView33"/>
        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/grey_comment"
            android:layout_alignTop="@+id/imageView27"
            android:layout_centerHorizontal="true"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/comments"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView33"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textView65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:hint=" 0 "
            android:textColor="#000"
            android:layout_above="@+id/comments"
            android:layout_toStartOf="@+id/imageView33"/>
        <TextView
            android:id="@+id/textView66"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView65"
            android:layout_toEndOf="@+id/imageView33"
            android:hint=" 0 "/>

        <TextView
            android:textColor="#000"
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView65"
            android:layout_toEndOf="@+id/imageView32"
            android:hint=" 0 "/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
