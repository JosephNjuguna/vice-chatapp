<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/freindsnotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewpop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:src="@mipmap/circle" />
        <TextView
            android:id="@+id/textViewUsee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="6dp"
            android:textColor="#ff000000"
            android:hint="username" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewpop"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/imageViewpop"
            android:text="has sent you new friend request" />
        <TextView
            android:id="@+id/textView10accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewpop"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/editext"
            android:padding="4dp"
            android:textColor="#303f9f"
            android:text=" ACCEPT  " />
        <TextView
            android:id="@+id/textView14decline"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/login_background_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_alignTop="@+id/textView10accept"
            android:layout_toStartOf="@+id/textView10accept"
            android:text="decline" />
    </RelativeLayout>
</android.support.v7.widget.CardView>