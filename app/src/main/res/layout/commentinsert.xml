<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfilecomment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/circle_spin"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:textColor="#1620B3"
            android:padding="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/commentschat"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_username"
            android:layout_toEndOf="@+id/imageViewProfilecomment"/>
        <TextView
            android:textColor="#1620B3"
            android:id="@+id/comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:visibility="visible"
            android:layout_toEndOf="@+id/imageViewProfilecomment"/>
        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_toEndOf="@+id/comment_username"
            android:layout_alignTop="@+id/comment_username"
            android:textColor="#ffff" />
    </RelativeLayout>
</android.support.v7.widget.CardView>