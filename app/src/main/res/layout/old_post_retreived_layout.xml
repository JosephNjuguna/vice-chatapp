<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
    android:layout_width="match_parent"
  android:layout_height="wrap_content">
    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/chat_background_all">
         <ImageView
             android:id="@+id/imageButtonold"
             android:layout_width="match_parent"
             android:adjustViewBounds="true"
             android:layout_margin="2dp"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/textViewoldpost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/imageButtonold"
             android:padding="2dp"
             android:layout_marginStart="3dp"
             android:textColor="#ffff"/>
        <RelativeLayout
            android:id="@+id/old"
            android:background="@drawable/buttonstroke2"
            android:layout_marginBottom="3dp"
            android:padding="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewoldpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <ImageView
             android:id="@+id/Like"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_alignParentStart="true"
             android:src="@mipmap/like_grey"/>

           <TextView
                android:textColor="#ffff"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/LIKECOUNT"
                android:layout_toEndOf="@+id/Like"
                android:layout_centerVertical="true"/>

           <ImageView
                android:id="@+id/heartLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/LIKECOUNT"
                android:src="@mipmap/heart_grey"/>
           <TextView
                android:textColor="#ffff"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/HEARTCOUNT"
                android:layout_toEndOf="@+id/heartLike"
                android:layout_centerVertical="true"/>
           <ImageView
             android:id="@+id/comments"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginStart="12dp"
             android:layout_toEndOf="@+id/HEARTCOUNT"
             android:src="@mipmap/grey_comment"/>
           <TextView
             android:textColor="#ffff"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/COMMENTCOUNT"
             android:layout_toEndOf="@+id/comments"
             android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/buttonstroke2"
            android:layout_toEndOf="@+id/old"
            android:layout_alignBottom="@+id/old"
            android:src="@mipmap/white_del"
            android:visibility="visible"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>