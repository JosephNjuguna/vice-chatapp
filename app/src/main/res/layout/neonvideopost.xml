<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/text"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/neonpost"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="trending tech"/>
        <TextView
            android:layout_marginEnd="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Jonathan Morrison" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/neonpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/text"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/videoView"
        android:layout_below="@+id/videoView"
        app:srcCompat="@mipmap/circle" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView5" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar3"
        android:layout_toStartOf="@+id/imageView5"
        android:text="12 min 03 sec" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView3"
            android:src="@mipmap/circle" />
    </RelativeLayout>
</RelativeLayout>