<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
    android:layout_margin="3dp"
  android:layout_height="wrap_content">
    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:background="@drawable/searchdeco"
        android:visibility="visible">
     <ImageView
         android:id="@+id/imageButtonold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:adjustViewBounds="true"
         android:layout_alignParentStart="true"/>
     <TextView
         android:id="@+id/textViewoldpost"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/imageButtonold"
         android:padding="3dp"
         android:textColor="#303f9f"
         android:visibility="visible"/>

        <RelativeLayout
            android:layout_below="@+id/textViewoldpost"
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/searchdeco"
           android:layout_marginBottom="2dp"
            android:padding="1dp">

            <ImageView
                android:id="@+id/Like"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:src="@mipmap/like" />

            <TextView
                android:id="@+id/LIKECOUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/Like"
                android:hint="0"
                android:textColor="#303F9F" />

            <ImageView
                android:id="@+id/heartLike"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toEndOf="@+id/LIKECOUNT"
                android:src="@mipmap/full_blue_heart" />

            <TextView
                android:id="@+id/HEARTCOUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/heartLike"
                android:hint="0"
                android:textColor="#303F9F" />

            <ImageView
                android:id="@+id/comments"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toEndOf="@+id/HEARTCOUNT"
                android:src="@mipmap/comment_blue" />

            <TextView
                android:id="@+id/COMMENTCOUNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/comments"
                android:hint="0"
                android:textColor="#303F9F" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/relativeLayout"
            android:src="@mipmap/ic_dots" />

    </RelativeLayout>

</android.support.v7.widget.CardView>