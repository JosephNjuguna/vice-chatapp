<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:visibility="visible">
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#ffff"
            android:layout_below="@+id/post_username"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton2"
            android:background="@drawable/chat_background_purple"
            android:hint="caption"
            android:textColorHint="#ffff"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/Like"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewName"
            app:srcCompat="@mipmap/like"/>
        <ImageView
            app:srcCompat="@mipmap/heart_grey"
            android:id="@+id/heartLike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@+id/textViewName"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/Like"
            android:background="#ffff"/>
        <ImageView
            app:srcCompat="@mipmap/comment_blue"
            android:id="@+id/comments"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#ffff"
            android:layout_marginStart="22dp"
            android:layout_below="@+id/textViewName"
            android:layout_toEndOf="@+id/heartLike"/>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Like"
            android:layout_toEndOf="@+id/Like"
            android:textColor="#000"
            android:layout_margin="4dp"
            android:text="0"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/heartLike"
            android:layout_toEndOf="@+id/heartLike"
            android:layout_margin="4dp"
            android:textColor="#000"
            android:text="0"/>
        <TextView
            android:id="@+id/textViewcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/comments"
            android:layout_toEndOf="@+id/comments"
            android:layout_margin="4dp"
            android:textColor="#000"
            android:text="0"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>