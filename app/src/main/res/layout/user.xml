<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:background="#ffff"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/editext3"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewAllFriends"
            android:layout_width="60dp"
            android:layout_margin="3dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:textColor="#1620b3"
            android:textColorHint="#1620b3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewUserFriends"
            android:layout_toEndOf="@+id/imageViewAllFriends"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/textViewUserFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1620b3"
            android:textColorHint="#1620b3"
            android:textSize="14sp"
            android:layout_alignTop="@+id/imageViewAllFriends"
            android:layout_toEndOf="@+id/imageViewAllFriends"
            android:layout_marginTop="9dp"/>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/online_offline"
            android:layout_above="@+id/textView27"
            android:layout_toEndOf="@+id/textViewUserFriends"
            android:layout_marginStart="6dp"/>
        <TextView
            android:id="@+id/textView84"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>