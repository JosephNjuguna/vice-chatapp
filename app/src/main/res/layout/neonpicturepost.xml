<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="4dp"
        android:background="@drawable/editext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
        android:id="@+id/neonimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_below="@+id/dottes"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/dottes"
            android:src="@mipmap/sllepingdotsblue"/>
        <TextView
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/dottes"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:textColor="#303F9F"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
      <RelativeLayout
        android:layout_below="@+id/neonimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView24blogger"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView24blogger"
            android:layout_below="@+id/textView46"
            android:textColor="#303f9f"/>
        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/imageView24blogger"
            android:layout_toEndOf="@+id/imageView24blogger"
            android:textColor="#303f9f" />
        <TextView
            android:textColor="#303F9F"
            android:layout_margin="3dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_alignBaseline="@+id/textView46"
            android:layout_alignBottom="@+id/textView46"
            android:layout_toEndOf="@+id/textView46"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>