<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_edittext"
    tools:context="com.oskip.bitapp.launching_screen">

        <Button
            android:background="@drawable/buttonstroke"
            android:id="@+id/buttonTosignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="132dp"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:text="  sign up to create account  "/>
        <Button
            android:id="@+id/buttontologin"
            android:background="@drawable/buttonstroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textColor="#ffffff"
            android:text="have account ? log in "
            android:layout_alignTop="@+id/buttonTosignup"
            android:layout_alignStart="@+id/buttonTosignup"
            android:layout_alignEnd="@+id/buttonTosignup"/>
        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:text="VICECHAT."
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/buttonTosignup"
            android:textColor="#ffffff"
            android:text=" welcome "/>

</RelativeLayout>
