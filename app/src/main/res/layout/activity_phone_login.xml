<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_edittext"
    tools:context="com.oskip.bitapp.phonelogin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView49"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/editext"
        android:ems="10"
        android:hint="enter phone number"
        android:inputType="phone"
        android:padding="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:textAlignment="center"
        android:textColor="#000000" />
    <RelativeLayout
        android:id="@+id/pass2"
        android:layout_below="@+id/editText13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/editext"
            android:ems="10"
            android:hint="enter password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center" />
        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/imageViewpasshide"
            android:layout_alignTop="@+id/editTextPassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/passhidden" />
        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/imageViewpassview"
            android:layout_alignTop="@+id/editTextPassword"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:src="@mipmap/passview" />
    </RelativeLayout>
    <Button
        android:id="@+id/button15"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:textColor="#ffff"
        android:background="@drawable/buttonstroke1"
        android:text="CONTINUE"/>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_googleg_color_24dp" />
    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView64"
        android:layout_marginTop="30dp"
        android:text="log in to your account using either :"
        android:textColor="#ffff"/>
    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button15"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/text1"
        android:padding="3dp"
        android:text="  New to VICECHAT?? Sign Up here  "
        android:textColor="#ffff" />
    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="VICECHAT"
        android:textColor="#ffff"
        android:textSize="40dp" />
    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView25"
        android:layout_marginTop="12dp"
        android:text="or" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
